<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="24dp"
    app:cardMaxElevation="12dp"
    app:cardElevation="20dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="5dp"
    android:id="@+id/product_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            tools:src="@drawable/image_26"/>
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Pink Diamond"
                    android:textColor="@color/pink"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/tv_product_quantity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    tools:text="x 1"
                    android:textColor="#6A515E"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_product_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pure ring with Diamonds (0.1400 Ct)"
                android:textColor="@color/purple"/>

            <TextView
                android:id="@+id/tv_product_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="$1400"
                android:paddingEnd="17dp"
                android:textColor="#6A515E"/>
            
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>