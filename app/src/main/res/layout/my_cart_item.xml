<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_view2"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="20dp"
    app:cardMaxElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_product_thumbnail2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            tools:src="@drawable/image_26"
            />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/pink"
                    android:textSize="18sp"
                    tools:text="Pink Diamond" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="18sp"
                    android:textColor="@color/pinkDark"
                    android:text="x" />

                <TextView
                    android:id="@+id/tv_product_quantity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="18sp"
                    android:textColor="@color/pinkDark"
                    tools:text="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_product_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                tools:text="Pure ring with Diamonds (0.1400 Ct)" />

            <TextView
                android:id="@+id/tv_product_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="17dp"
                android:textColor="#6A515E"
                tools:text="$1400" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>