<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JewelEase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.JewelEase" parent="Base.Theme.JewelEase" />

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
    </style>

    <style name="roundImageView" parent="">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
    </style>

    <style name="positive">
        <item name="android:textColor">@color/pink</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="negative">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>